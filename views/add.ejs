<%- include partials/header.ejs %>

<div id="trip" class="container">
<form class="form" action="/travellog" method="POST">
  <h2 class="title is-2">Add Trip</h2>
    <div class="field">
      <label class="label">User</label>
      <div class="control">
        <input class="input" type="text" name="user" value="<%= currentUser.username%>" required>
      </div>
    </div>

    <div class="field">
        <label class="label" for="country">Country</label>
        <p class="control has-icons-left">
          <span class="select is-fullwidth">
            <select name="country">
            <option value="" disabled selected>Select country</option>
              <% countries.forEach((country) => { %>
              <option><%= country.name %></option>
              <% })%>
            </select>
          </span>
          <span class="icon is-small is-left">
            <i class="fas fa-globe-americas"></i>
          </span>
        </p>
      </div>

      <div class="field">
        <label class="label" for="startDate">Start Date</label>
        <div class="control">
          <input class="input" type="date" name="startDate" required>
        </div>
    </div>

      <div class="field">
        <label class="label" for="endDate">End Date</label>
        <div class="control">
          <input class="input" type="date" name="endDate" required>
        </div>
    </div>

    <button class="button" type="submit">Add</button>
    <%- include('./partials/notifications.ejs') %>
  </form>
</div>
