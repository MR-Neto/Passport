<%- include partials/header.ejs %>

<div id="home">
  <div class="modal">
    <div class="modal-background"></div>
      <div class="modal-content">
        <%- include partials/signup-form.ejs %>
        <button class="modal-close is-large" aria-label="close"></button>
      </div>
  </div>
  <!-- End of modal -->

  <div class="hero">
    <div id="home-banner" class="hero-body">
      <div class="container">
        <% if(!currentUser) { %>
        <h1>Keep track of your trips with Passport.</h1>
        <div class="field is-grouped is-grouped-centered">
          <a class="button action" href="#">Sign Up</a>
        </div>
        <% } else { %>
        <h1>Welcome back <%= currentUser.username %></h1>
        <% } %>
      </div>
    </div>
  </div>

  <section class="section">
    <div class="card">
      <div class="card-image">
        <figure class="image is-128x128">
          <img src="img/passport.svg" alt="Passport image">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4 has-text-centered">Keep your trips with Passport</p>
          </div>
        </div>
      </div>
      <div class="content">
        Save the trips in Passport and keep a record of them.
      </div>
    </div>

    <div class="card">
      <div class="card-image">
        <figure class="image is-128x128">
          <img src="img/map.svg" alt="Map image">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4 has-text-centered">Have a world view of your achievements</p>
          </div>
        </div>
      </div>
      <div class="content">
        Have a world view of your achievements and compare them with others.
      </div>
    </div>

    <div class="card">
      <div class="card-image">
        <figure class="image is-128x128">
          <img src="img/camera.svg" alt="Camera image">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4 has-text-centered">Sign In with Instagram</p>
          </div>
        </div>
      </div>
      <div class="content">
        Sign in directly with your Instagram account and import the places you have been.
      </div>
    </div>
  </section>
</div>

<%- include partials/footer.ejs%>
